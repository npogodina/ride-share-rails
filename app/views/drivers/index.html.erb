
<div class="container">
<h1>Meet our Drivers:</h1>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Rating</th>
        <th scope="col">Available?</th>
      </tr>
    </thead>
    <tbody>
      <% @drivers.each do |driver| %>
        <tr>
          <th scope="row"> <%= driver.id %> </th>
          <td> <%= driver.name %> </td>
          <td>5</td>
          <% if driver.available %>
            <td>Yes</td>
          <% else %>
            <td>No</td>
          <% end %>
        </tr>
      <% end %> 
    </tbody>
  </table>
</div>