
<div class="container">
<h1>Meet our Drivers:</h1>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Rating</th>
        <th scope="col">Available?</th>
      </tr>
    </thead>
    <tbody>
      <% @drivers.each do |driver| %>
        
          <tr class="list-group-item-action">
            <th scope="row"> <%= driver.id %> </th>
            <td> <%= link_to driver.name, driver_path(driver) %> </td>
            
            <% if driver.average_rating > 0 %>
              <td> <%= driver.average_rating %> </td>
            <% else %>
              <td>N/A</td>
            <% end %>
            
            <% if driver.available %>
              <td>Yes</td>
            <% else %>
              <td>No</td>
            <% end %>
          </tr>
        
      <% end %> 
    </tbody>
  </table>
</div>